<ul class="card-text font-weight-light list-group list-group-flush">
  {% for content in data[1] %}
    <li class="list-group-item">
      <div class="row">

        <div class="col-xs-12 cl-sm-12 col-md-12 mt-2 mt-md-0" style="padding-left: 0em">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {{ content.name }}
          </h6>
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.summary }}</h6>
          <ul class="items">
            {% for item in content.highlights %}
              <li>
                <span class="item">{{ item }}</span>
              </li>
            {% endfor %}
          </ul>
            {% if content.url %}
                <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem; text-align: right"><a href="{{ content.url }}">Code</a></h6>
            {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
